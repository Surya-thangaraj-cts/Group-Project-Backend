  "components": {
    "schemas": {
      "CreateAccountDto": {
        "required": [
          "accountType",
          "customerId",
          "customerName"
        ],
        "type": "object",
        "properties": {
          "customerName": {
            "minLength": 1,
            "type": "string"
          },
          "customerId": {
            "minLength": 7,
            "type": "string"
          },
          "accountType": {
            "maximum": 1,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateTransactionDto": {
        "required": [
          "accountId",
          "amount",
          "transactionType"
        ],
        "type": "object",
        "properties": {
          "accountId": {
            "type": "integer",
            "format": "int32"
          },
          "transactionType": {
            "maximum": 3,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "minimum": 0.01,
            "type": "number",
            "format": "double"
          },
          "narrative": {
            "type": "string",
            "nullable": true
          },
          "toAccountId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EditUserRequest": {
        "type": "object",
