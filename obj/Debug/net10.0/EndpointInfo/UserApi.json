        ],
        "type": "object",
        "properties": {
          "status": {
            "maximum": 1,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UserRole": {
        "enum": [
          "Admin",
          "Manager",
          "Officer"
        ],
        "type": "string"
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter JWT token. Example: Bearer {token}",
        "scheme": "bearer",
        "bearerFormat": "JWT"
